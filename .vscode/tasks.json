{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:watch",
      "type": "npm",
      "script": "build:watch"
    },
    {
      "label": "run tests",
      "type": "npm",
      "script": "test:ui"
    },
    {
      "label": "bump version and deploy",
      "type": "shell",
      "command": "pnpm exec @ls-stack/pkg-manager p",
      "problemMatcher": []
    },
    {
      "label": "run lint",
      "type": "npm",
      "script": "lint",
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "tsc watch",
      "type": "npm",
      "script": "tsc:watch",
      "presentation": {
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "version",
      "type": "pickString",
      "description": "Select version type",
      "options": ["minor", "patch", "major"]
    }
  ]
}
